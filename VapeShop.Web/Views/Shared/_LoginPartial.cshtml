
@if(User.Identity.IsAuthenticated)
{
	<ul style="padding: 20px 0">
		<li class="li_style"><span class="dropdown-item disabled p-0" style="color: black">@User.Identity.Name</span></li>
		<li class="li_style"><a class="dropdown-item p-0" asp-action="" asp-controller="">Profile</a></li>
		<li class="li_style"><a class="dropdown-item p-0" asp-action="" asp-controller="">Order</a></li>
		<li class="li_style"><a class="dropdown-item p-0" asp-action="" asp-controller="">Wish</a></li>
		<li class="li_style"><a class="dropdown-item p-0" asp-action="" asp-controller="">Comparison</a></li>
	</ul>
	<div class="button-div">
		<a class="btn_main btn_main_l" asp-action="Logout" asp-controller="Account">LogOut</a>
	</div>

	
}
else
{
	<ul style="padding: 20px 0">
		<li class="li_style"><a class="dropdown-item p-0" asp-action="" asp-controller="">Order</a></li>
		<li class="li_style"><a class="dropdown-item p-0" asp-action="" asp-controller="">Wish</a></li>
		<li class="li_style"><a class="dropdown-item p-0" asp-action="" asp-controller="">Comparison</a></li>
	</ul>
	<div class="button-div">
		<a class="btn_main btn_main_d me-2" asp-action="Login" asp-controller="Account">LogIn</a>
		<a class="btn_main btn_main_l" asp-action="Register" asp-controller="Account">Register</a>
	</div>

	

	
}

<style>

	.button-div {
		display: flex;
		background: #f7f7f7;
		padding: 15px;
	}

	.li_style {
		display: block;
		color: #08a6a8;
		padding: 0px;
		padding: 7px 14px;
		list-style: none;
	}

		.li_style:hover {
			color: white;
			background-color: #08a6a8;
			cursor: pointer;
		}

			.li_style:hover .dropdown-item {
				color: white;
			}


	.dropdown-item{
		color: #08a6a8;
	}
	.dropdown-item:hover{
		background-color: #08a6a8;
			color: white;
	}
</style>